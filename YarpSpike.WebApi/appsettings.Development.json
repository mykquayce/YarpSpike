{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "Match": {
          "Path": "baget/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/baget" }
        ]
      },
      "route2": {
        "ClusterId": "cluster2",
        "Match": {
          "Path": "pihole/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/pihole" }
        ]
      }
    },
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "cluster1/destination1": {
            "Address": "http://localhost:30080/"
          }
        }
      },
      "cluster2": {
        "Destinations": {
          "cluster2/destination1": {
            "Address": "http://localhost:40080/"
          }
        }
      }
    }
  }
}
